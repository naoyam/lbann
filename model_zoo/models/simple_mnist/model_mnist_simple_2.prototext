trainer {
  block_size: 256
  procs_per_trainer: 0
  num_parallel_readers: 0
}
model {
  data_layout: "data_parallel"
  mini_batch_size: 64
  num_epochs: 3

  ###################################################
  # Objective function
  ###################################################

  objective_function {
    layer_term { layer: "cross_entropy" }
    l2_weight_regularization {
      scale_factor: 1e-4
    }
  }

  ###################################################
  # Metrics
  ###################################################

  metric {
    layer_metric {
      name: "categorical accuracy"
      layer: "accuracy"
      unit: "%"
    }
  }

  ###################################################
  # Callbacks
  ###################################################
  summarizer {
    dir: "."
  }

  callback { print {} }
  callback { timer {} }
  callback {
    summary {
      mat_interval: 25
    }
  }
  callback {
    adaptive_learning_rate {
      patience: 4
      amt: 0.1
    }
  }

  ###################################################
  # Layers
  ###################################################

  layer {
    name: "data"
    children: "image label"
    data_layout: "data_parallel"
    input {}
  }
  layer {
    parents: "data"
    name: "image"
    data_layout: "data_parallel"
    split {}
  }
  layer {
    parents: "data"
    name: "label"
    data_layout: "data_parallel"
    split {}
  }

  layer {
    parents: "image"
    name: "ip1"
    data_layout: "model_parallel"
    fully_connected {
      num_neurons: 500
      has_bias: true
    }
  }

  layer {
    parents: "ip1"
    name: "relu1"
    data_layout: "model_parallel"
    relu {}
  }

  layer {
    parents: "relu1"
    name: "ip2"
    data_layout: "model_parallel"
    fully_connected {
      num_neurons: 200
      has_bias: true
    }
  }

  layer {
    parents: "ip2"
    name: "relu2"
    data_layout: "model_parallel"
    relu {}
  }
  layer {
    parents: "relu2"
    name: "ip3"
    data_layout: "model_parallel"
    fully_connected {
      num_neurons: 10
      has_bias: true
    }
  }

  layer {
    parents: "ip3"
    name: "prob"
    data_layout: "data_parallel"
    softmax {}
  }

  layer {
    parents: "prob label"
    name: "cross_entropy"
    data_layout: "data_parallel"
    cross_entropy {}
  }

  layer {
    parents: "prob label"
    name: "accuracy"
    data_layout: "data_parallel"
    categorical_accuracy {}
  }

}
